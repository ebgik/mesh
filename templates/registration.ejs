<% layout('/layout/page') -%>
<% block ('title', title); %>
<% block ('keywords', meta_k); %>
<% block ('description', meta_d); %>
<div class='col-md-4'>
	<form class="form-signin" role="form" id='regForm' method='POST'>
        <h1><%=blocks.title%></h1>
        <div class='form-group'>
            <input type="text" name='name' class="form-control" placeholder="Имя" required autofocus>
        </div>
        <div class='form-group'>
        	<input type="email" name='email' class="form-control" placeholder="E-mail" required autofocus>
        </div>
        <div class='form-group'>
        	<input type="password" name='pass' class="form-control" placeholder="Пароль" required>
        </div>
        <div class='form-group'>
            <input type="password" name='double_pass' class="form-control" placeholder="Повторите пароль" required>
        </div>
        <div class='form-group has-error'>
            <label class='control-label' id='error'></label>
        </div>
        <div class='form-group has-success'>
            <label class='control-label' id='success'></label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Регистрация</button>
    </form>
</div>
